<?xml version="1.0" encoding="utf-8"?>
<package version="2.0"
    xmlns="http://www.zend.com/server/deployment-descriptor/1.0">
    <type>application</type>
    <name>mwop.net</name>
    <summary>mwop.net website</summary>
    <version><release>{SHA1}</release></version>
    <appdir>data</appdir>
    <docroot>data/public</docroot>
    <scriptsdir>data/scripts</scriptsdir>
    <healthcheck></healthcheck>
    <dependencies>
        <required>
            <php><min>5.3.3</min></php>
            <extension><name>pdo_sqlite</name></extension>
            <directive>
                <name>display_errors</name>
                <equals>0</equals>
            </directive>
        </required>
    </dependencies>
    <persistentresources>
        <resource>data/data/comics.html</resource>
        <resource>data/data/config/*</resource>
        <resource>data/data/github-feed-links.phtml</resource>
        <resource>data/data/pages/*</resource>
        <resource>data/data/users.db</resource>
    </persistentresources>
</package>
