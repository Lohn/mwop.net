version: '3.2'

services:
  redis:
    image: "redis:alpine"
    environment:
      - REDIS_APPENDONLY=yes
      - REDIS_APPENDFSYNC=always
    volumes:
      - /data/redis:/data

  php:
    image: "mwop/mwopswoole:{mwopswoole}"
    env_file:
      - .env
    depends_on:
      - redis

  caddy:
    image: "mwop/mwopswoolecaddy:{mwopswoolecaddy}"
    env_file:
      - .caddy.env
    depends_on:
      - php
    deploy:
      restart_policy:
        condition: on-failure
        window: 5s
    volumes:
      - /data/caddy:/root/.caddy
    ports:
      - "80:80"
      - "443:443"

volumes:
  caddy-certificate-volume:
