{
    "name": "weierophinney/mwop.net",
    "license": "BSD-2-Clause",
    "description": "Source code for mwop.net",
    "config": {
        "sort-packages": true
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/weierophinney/PhlyComic"
        }
    ],
    "require": {
        "php": "^7.0",
        "cache/namespaced-cache": "^1.0",
        "cache/predis-adapter": "^1.0",
        "dflydev/fig-cookies": "^2.0",
        "league/commonmark": "^0.14",
        "league/oauth2-github": "^2.0",
        "league/oauth2-google": "^2.0",
        "middlewares/csp": "^1.0.1",
        "mnapoli/front-yaml": "^1.5",
        "monolog/monolog": "^1.23",
        "phly/phly-comic": "^1.1.4",
        "phly/phly-expressive-oauth2clientauthentication": "^0.2.1",
        "php-http/curl-client": "^1.4",
        "php-http/message": "^1.2",
        "psr/http-message": "^1.0",
        "psr/simple-cache": "^1.0",
        "symfony/console": "^4.1",
        "symfony/yaml": "^2.7",
        "zendframework/zend-config-aggregator": "^0.2.0",
        "zendframework/zend-diactoros": "^1.7",
        "zendframework/zend-escaper": "^2.5.2",
        "zendframework/zend-expressive": "^3.0",
        "zendframework/zend-expressive-csrf": "^1.0",
        "zendframework/zend-expressive-fastroute": "^3.0",
        "zendframework/zend-expressive-platesrenderer": "^2.0",
        "zendframework/zend-expressive-session": "^1.1",
        "zendframework/zend-expressive-swoole": "^0.2.1",
        "zendframework/zend-feed": "^2.7",
        "zendframework/zend-inputfilter": "^2.7.3",
        "zendframework/zend-mail": "^2.7.3",
        "zendframework/zend-paginator": "^2.7",
        "zendframework/zend-servicemanager": "^3.1",
        "zendframework/zend-stdlib": "^3.1",
        "zendframework/zend-stratigility": "^3.0",
        "zendframework/zend-tag": "^2.6.1"
    },
    "require-dev": {
        "filp/whoops": "^2.1.3",
        "phpunit/phpunit": "^5.7 || ^6.0",
        "zendframework/zend-coding-standard": "~1.0.0",
        "zendframework/zend-component-installer": "^2.1",
        "zendframework/zend-expressive-tooling": "^1.0",
        "zfcampus/zf-development-mode": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "Mwop\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MwopTest\\": "test/"
        }
    },
    "scripts": {
        "assets:build": [
            "@npm",
            "grunt"
        ],
        "assets:copy": [
            "@npm",
            "bin/mwop.net.php asset:copy-symlinks"
        ],
        "assets:symlink": [
            "@npm",
            "bin/mwop.net.php asset:create-symlinks"
        ],
        "build": [
            "@assets:symlink",
            "@assets:build",
            "bin/mwop.net.php asset:use-dist-templates",
            "@build:blog",
            "@build:homepage",
            "phly-comic.php fetch-all --output=data/comics.phtml --exclude=dilbert,reptilis-rex,nih",
            "@clean"
        ],
        "build:blog": [
            "bin/mwop.net.php blog:clear-cache",
            "bin/mwop.net.php blog:seed-db",
            "bin/mwop.net.php blog:tag-cloud",
            "bin/mwop.net.php blog:feed-generator",
            "@build:search"
        ],
        "build:homepage": [
            "bin/mwop.net.php github:fetch-activity",
            "bin/mwop.net.php homepage-feeds"
        ],
        "build:search": "bin/mwop.net.php blog:generate-search-data",
        "clean": [
            "rm -Rf node_modules",
            "rm -Rf .tmp"
        ],
        "cs:check": "phpcs",
        "cs:fix": "phpcbf",
        "development:disable": "zf-development-mode disable",
        "development:enable": "zf-development-mode enable",
        "development:status": "zf-development-mode status",
        "docker:assets": [
            "@assets:copy",
            "@assets:build",
            "@clean"
        ],
        "docker:site": [
            "bin/mwop.net.php use-dist-templates",
            "@build:blog",
            "@build:homepage",
            "phly-comic.php fetch-all --output=data/comics.phtml --exclude=dilbert,reptilis-rex,nih"
        ],
        "npm": "npm install --no-save",
        "serve": "docker-compose up",
        "test": "phpunit --colors=always",
        "expressive": "expressive"
    }
}
