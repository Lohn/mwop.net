<?php
$tags         = $this->vars('tags');
$url          = $this->plugin('url');
$renderedTags = array();

foreach ($tags as $tag) {
    $renderedTags[] = sprintf(
        '<a href="%s">%s</a>', 
        $url->direct(array('tag' => $tag), array('name' => 'blog-tag')),
        $tag
    );
}
echo implode("<br />\n", $renderedTags);
