<div class="grid_9 content blog">
{{#entity_updated}}
<h2 class="notification">Entry updated</h2>
{{/entity_updated}}
<h2>{{title}}</h2>
<div class="content">
    {{{body}}}
    {{{extended}}}
</div>
</div>

<div class="grid_3 sidebar blog">
    <div class="metadata">
        <ul>
            <li>Posted by <a href="{{author_url}}">{{author}}</a>.</li> 
            <li>Posted on <b>{{created}}</b>.</li>
            <li>Last updated on <b>{{updated}}</b>.</li>
        </ul>
    </div>

    <div class="metadata">
        <h4>Tags for this entry</h4>
        <p class="tags">{{{tags}}}</p>
    </div>

    {{>blog/blogroll}}
</div>
